def random_oponents2():
    opponents2 = [
        ["Treasure Hoarders", 25, 10],
        ["Fatui Pyro Agent", 35, 15],
        ["Unusual Hilichurl", 5, 1],
        ["Thunderhelm Lawachurl", 15, 5],
    ]
    return choice(opponents2)
